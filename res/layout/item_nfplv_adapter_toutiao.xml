<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/item_nfplv_adapter_title"
        android:layout_marginTop="5dp"
        android:id="@+id/item_nfplv_adapter_toutiao_title"
        />
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
		android:id="@+id/item_nfplv_adapter_toutiao_img"        
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/item_nfplv_adapter_smalltext"
			android:id="@+id/item_nfplv_adapter_toutiao_source"
			android:layout_marginLeft="10dp"
            />
        <TextView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/item_nfplv_adapter_smalltext"
			android:id="@+id/item_nfplv_adapter_toutiao_time"
			android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    

</LinearLayout>
